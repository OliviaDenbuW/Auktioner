@model Nackowskiiiii.Models.AuctionViewModels.AuctionViewModel

@{
    ViewData["Title"] = "CreateNewAuction";
}

<h2>CreateNewAuction</h2>

<form asp-controller="Admin" asp-action="CreateNewAuction" method="post">
    <label asp-for="Title"></label>
    <br />
    <input type="text" asp-for="Title" />
    <br />

    <label asp-for="Description"></label>
    <br />
    <input type="text" asp-for="Description" />
    <br />

    <label asp-for="StartPrice"></label>
    <br />
    <input type="text" asp-for="StartPrice" />
    <br />
    
    <label asp-for="StartDate"></label>
    <br />
    <input asp-for="StartDate" type="datetime-local" />
    <br />

    <label asp-for="EndDate"></label>
    <br />
    <input asp-for="EndDate" type="datetime-local" @*value=""*@ />
    <br />

    <input type="submit" value="Create" class="btn btn-default navbar-btn"/>
</form>